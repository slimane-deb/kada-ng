{
  "name": "kada-ng",
  "version": "1.0.1",
  "description": "App For Auto",
  "main": "electron-main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "postbuild": "npm run deploy",
    "deploy": "ng build --output-path=../kada/src/main/resources/static",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --prod --base-href ./ && electron .",
    "electron-tsc": "tsc main.ts && ng build --base-href ./ && electron .",
    "pack": "electron-builder --dir",
    "dist:linux": "ng build --prod --base-href ./ && electron-builder --linux",
    "dist:win": "ng build --prod --base-href ./ && electron-builder --windows"
  },
  "author": "Slimane <slimane.deb@outlook.com>",
  "license": "${build.copyright}",
  "build": {
    "appId": "com.kada",
    "copyright": "Copyright Â© 2020 ${author}",
    "productName": "kada",
    "win": {
      "icon": "../src/assets/img/auto_ecole.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "../src/assets/img/auto_ecole.png",
      "target": "AppImage",
      "category": "Utility"
    },
    "nsis": {
      "artifactName": "${productName}-setup${version}.exe",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "files": [
      "dist/**/*",
      "package.json",
      "electron-main.js",
      "service.bat"
    ],
    "extraFiles": [
      "back/**/*"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.1.1",
    "@angular/cdk": "~8.2.3",
    "@angular/common": "~8.1.1",
    "@angular/compiler": "~8.1.1",
    "@angular/core": "~8.1.1",
    "@angular/forms": "~8.1.1",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.1.1",
    "@angular/platform-browser-dynamic": "~8.1.1",
    "@angular/router": "~8.1.1",
    "hammerjs": "^2.0.8",
    "material-design-icons": "^3.0.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~15.0.0",
    "@angular/cli": "~8.1.1",
    "@angular/compiler-cli": "~8.1.1",
    "@angular/language-service": "~8.1.1",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
